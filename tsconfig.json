{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },

    "types": [],
    "typeRoots": ["./src/@types", "./node_modules/@types"],

    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
