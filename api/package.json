{
  "name": "hub-connector-api",
  "version": "1.0.0",
  "description": "Hub Connector API - Backend service",
  "main": "main.ts",
  "type": "module",
  "scripts": {
    "lint": "eslint .",
    "format": "prettier . --write",
    "lint:fix": "eslint . --fix",
    "dev:http": "cross-env NODE_ENV=development PROCESS_TYPE=http tsx watch src/main.ts",
    "dev:worker": "cross-env NODE_ENV=development PROCESS_TYPE=worker tsx watch src/main.ts",
    "seed": "tsx src/infra/database/seeders/seed.ts",
    "test": "vitest",
    "test:unit": "vitest --config vitest.config.ts --run",
    "test:e2e": "vitest --config vitest.e2e.config.ts --run",
    "test:e2e:watch": "vitest --config vitest.e2e.config.ts --watch",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "build": "tsc && tsc-alias",
    "start": "node dist/main.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.18.3",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
